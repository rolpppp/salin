{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "client/**", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/src/(.*)",
      "dest": "/client/src/$1"
    },
    {
      "src": "/styles/(.*)",
      "dest": "/client/styles/$1"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/client/public/assets/$1"
    },
    {
      "src": "/",
      "dest": "/client/public/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/client/public/index.html"
    }
  ]
}